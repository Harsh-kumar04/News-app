{
  "openapi": "3.0.0",
  "info": {
    "title": "News App API",
    "version": "1.0.0",
    "description": "API documentation for News App project"
  },
  "servers": [
    {
      "url": "http://localhost:5000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ],
  "paths": {
    "/api/encry": {
      "post": {
        "tags": ["Auth"],
        "summary": "Encrypt user data",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "type": "object" }
            }
          }
        },
        "responses": {
          "201": { "description": "Encrypted data returned" }
        }
      }
    },
    "/api/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "Signup a new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "data": { "type": "string" } }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Signup successful" }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "login_type": { "type": "string" },
                  "username": { "type": "string" },
                  "email": { "type": "string" },
                  "password": { "type": "string" },
                  "social_id": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Login successful" }
        }
      }
    },
    "/api/logout": {
      "get": {
        "tags": ["Auth"],
        "summary": "Logout user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": { "description": "Logout successful" }
        }
      }
    },
    "/api/forgotpassward": {
      "post": {
        "tags": ["Auth"],
        "summary": "Forgot password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "email": { "type": "string" } }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Password reset email sent" }
        }
      }
    },
    "/api/resetpassword": {
      "post": {
        "tags": ["Auth"],
        "summary": "Reset password",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": { "type": "string" },
                  "oldpassword": { "type": "string" },
                  "newpassword": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Password changed successfully" }
        }
      }
    },
    "/api/cities/getcities": {
      "post": {
        "tags": ["City"],
        "summary": "Get all cities",
        "responses": {
          "200": { "description": "List of cities" }
        }
      }
    },
    "/api/cities/addCity": {
      "post": {
        "tags": ["City"],
        "summary": "Add a new city",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": { "name": { "type": "string" } }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "City added" }
        }
      }
    },
    "/api/news/add": {
      "post": {
        "tags": ["News"],
        "summary": "Add news",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "heading": { "type": "string" },
                  "tag": { "type": "string" },
                  "imageUrl": { "type": "string" },
                  "content": { "type": "string" },
                  "categoryName": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "News added" }
        }
      }
    },
    "/api/news/list": {
      "get": {
        "tags": ["News"],
        "summary": "Get news list",
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } },
          { "name": "title", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "List of news" }
        }
      }
    },
    "/api/news/{id}": {
      "get": {
        "tags": ["News"],
        "summary": "Get news details",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "News details" }
        }
      }
    },
    "/api/like/like": {
      "post": {
        "tags": ["Like"],
        "summary": "Toggle like/dislike",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "newsId": { "type": "integer" },
                  "type": { "type": "string", "enum": ["like", "dislike"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Like/dislike toggled" }
        }
      }
    },
    "/api/comment/comment": {
      "post": {
        "tags": ["Comment"],
        "summary": "Add comment",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": { "type": "string" },
                  "newsId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Comment added" }
        }
      }
    },
    "/api/profile/profile/{userId}": {
      "get": {
        "tags": ["Profile"],
        "summary": "Get user profile",
        "parameters": [
          { "name": "userId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": { "description": "User profile" }
        }
      }
    },
    "/api/profile/updateProfile/{userId}": {
      "post": {
        "tags": ["Profile"],
        "summary": "Update user profile",
        "parameters": [
          { "name": "userId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": { "type": "string" },
                  "phone": { "type": "string" },
                  "user": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Profile updated" }
        }
      }
    },
    "/api/my-news": {
      "get": {
        "tags": ["Reporter"],
        "summary": "Get reporter's news list",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "page", "in": "query", "schema": { "type": "integer" } },
          { "name": "limit", "in": "query", "schema": { "type": "integer" } },
          { "name": "title", "in": "query", "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Reporter news list" }
        }
      }
    },
    "/api/category": {
      "get": {
        "tags": ["Category"],
        "summary": "Get all categories",
        "responses": {
          "200": { "description": "List of categories" }
        }
      }
    }
  }
}
